    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Uuid</th>
                <td>{{ user.uuid }}</td>
            </tr>
            <tr>
